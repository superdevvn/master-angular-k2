{
    "compilerOptions": {
        "module": "system",
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "outFile": "dist/build.js",
        "sourceMap": true,
        "target": "es5",
        "lib": [
            "es6", "dom"
        ]
    },
    "include": [
        "src/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}